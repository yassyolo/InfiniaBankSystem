    <div class="container apply-loan-form mt-5">
        <h2 class="text-center">Заявка за кредит</h2>
        <form asp-action="ApplyForLoan" asp-controller="Loan">
            <input type="hidden" asp-for="Type" />
            <input type="hidden" asp-for="InterestRate" />
            <!-- Лични данни -->
