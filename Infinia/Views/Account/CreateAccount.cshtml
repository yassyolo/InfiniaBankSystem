@model Infinia.Core.ViewModels.Account.CreateAccountViewModel

@{
    ViewData["Title"] = "Create Account";
}

<h2>Create a New Account</h2>

<form asp-action="CreateAccount" asp-controller="Account" method="post">
    <div class="form-group">
        <label asp-for="Balance"></label>
        <input asp-for="Balance" class="form-control" placeholder="Enter Balance" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdentityCardNumber"></label>
        <input asp-for="IdentityCardNumber" class="form-control" placeholder="Enter Identity Card Number" />
        <span asp-validation-for="IdentityCardNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Branch"></label>
        <input asp-for="Branch" class="form-control" placeholder="Enter Branch" />
        <span asp-validation-for="Branch" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Account</button>
</form>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}
