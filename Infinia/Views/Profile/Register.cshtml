@model Infinia.Core.ViewModels.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/main.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <title>Register - Infinia</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>
<body>
    <header>
        <div id="main-page">
            <div class="navigation">
                <div class="navigation__item navigation__item-ft">
                    <a asp-action="Index" asp-controller="Profil" class="navigation__item-ft-name"></a>
                </div>
            </div>
        </div>
    </header>

    <main>
        <div id="register-section" class="register-section">
            <h2>Регистрация</h2>
            <div class="login-link">
                <p>Вече имате профил? <a asp-action="Login" asp-controller="Profile">Влезте тук</a>.</p>
            </div>
            <form asp-action="Register" asp-controller="Profile" method="post">
                <div class="form-group">
                    <label asp-for="Username">Потребителско име</label>
                    <input asp-for="Username" class="form-control" placeholder="Въведете потребителско име.." />
                    <span asp-validation-for="Username" class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Имейл</label>
                    <input asp-for="Email" class="form-control" placeholder="Въведете Вашия имейл.." />
                    <span asp-validation-for="Email" class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Парола</label>
                    <span class="icon" onclick="togglePasswordVisibility('passwordInput', 'passwordIcon')">
                        <i id="passwordIcon" class="fa fa-eye"></i> <!-- Eye icon -->
                    </span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Въведете желаната от Вас парола.." id="passwordInput" />
                    <span asp-validation-for="Password" class="validation"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">Потвърдете паролата</label>
                    <span class="icon" onclick="togglePasswordVisibility('confirmPasswordInput', 'confirmPasswordIcon')">
                        <i id="confirmPasswordIcon" class="fa fa-eye"></i> <!-- Eye icon -->
                    </span>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Потвърдете Вашата нова парола.." id="confirmPasswordInput" />
                    <span asp-validation-for="ConfirmPassword" class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Пълно име</label>
                    <input asp-for="Name" class="form-control" placeholder="Въведете Вашето име по лична карта.." />
                    <span asp-validation-for="Name" class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SSN">ЕГН</label>
                    <input asp-for="SSN" class="form-control" placeholder="Въведете Вашето ЕГН.." />
                    <span asp-validation-for="SSN" class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country">Държава</label>
                    <input asp-for="Country" class="form-control" placeholder="Въведете Вашата държава.." />
                    <span asp-validation-for="Country" class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City">Град</label>
                    <input asp-for="City" class="form-control" placeholder="Въведете Вашия град.." />
                    <span asp-validation-for="City" class="validation"></span>
                </div>
                <!-- New fields -->
                <div class="form-group">
                    <label asp-for="Street">Улица</label>
                    <input asp-for="Street" class="form-control" placeholder="Въведете Вашия адрес.." />
                    <span asp-validation-for="Street" class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode">Пощенски код</label>
                    <input asp-for="PostalCode" class="form-control" placeholder="Въведете пощенския код на града Ви.." />
                    <span asp-validation-for="PostalCode" class="validation"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="IdentityCardNumber">Лична карта №</label>
                    <input asp-for="IdentityCardNumber" class="form-control" placeholder="Въведете № на Вашата лична карта.." />
                    <span asp-validation-for="IdentityCardNumber" class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdentityCardIssuer">Издадел на личната карта</label>
                    <input asp-for="IdentityCardIssuer" class="form-control" placeholder="Въведете издателя на Вашата лична карта.." />
                    <span asp-validation-for="IdentityCardIssuer" class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdentityCardSex">Пол</label>
                    <select asp-for="IdentityCardSex" class="form-control">
                        <option value="Man">Мъж</option>
                        <option value="Woman">Жена</option>
                    </select>
                    <span asp-validation-for="IdentityCardSex" class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdentityCardNationality">Националност</label>
                    <input asp-for="IdentityCardNationality" class="form-control" placeholder="Въведете Вашата националност.." />
                    <span asp-validation-for="IdentityCardNationality" class="validation"></span>
                </div>
                <button type="submit" class="register-btn">Register</button>
            </form>
        </div>
    </main>

    <footer>
        <p>&copy; 2024 Infinia created by Albiceleste.</p>
    </footer>

    @section Scripts
    {
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        function togglePasswordVisibility(inputId, iconId) {
            var input = document.getElementById(inputId);
            var icon = document.getElementById(iconId);
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>
</body>
</html>

<style>
    .login-link {
        text-align: center;
        margin-top: 20px;
        margin-bottom:30px;
    }

        .login-link p {
            font-size: 14px;
            color: #333;
        }

        .login-link a {
            color: #2696E9;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }

            .login-link a:hover {
                color: #1874cc;
            }

 
    .form-group {
        position: relative;
    }

    .icon {
        cursor: pointer;
        position: absolute;
        right: 10px;
        top: 33px; /* Adjust this to align with the label */
        font-size: 18px;
    }

    input[type="password"] {
        padding-right: 40px; /* Add space for the icon */
    }
</style>